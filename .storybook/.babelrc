{
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["src"],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".json"
        ],
        "alias": {
          "animations": "./animations",
          "components": "./components",
          "formatting": "./formatting",
          "hooks": "./hooks",
          "i18n": "./i18n",
          "math": "./math",
          "open-id": "./open-id",
          "sanity": "./sanity",
          "theming": "./theming",
          "utils": "./utils"
        }
      }
    ]
  ]
}
