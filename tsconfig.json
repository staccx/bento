{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": [ "es2020", "dom" ],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "skipLibCheck": true,
    "checkJs": false,
    "emitDeclarationOnly": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
